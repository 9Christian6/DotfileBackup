    bindsym $mod+Shift+0 move container to $ws10
    bindsym $mod+Control+Shift+1 move container to $ws11
    bindsym $mod+Control+Shift+2 move container to $ws12
    bindsym $mod+Control+Shift+3 move container to $ws13
    bindsym $mod+Control+Shift+4 move container to $ws14
    bindsym $mod+Control+Shift+5 move container to $ws15
    bindsym $mod+Control+Shift+6 move container to $ws16
    bindsym $mod+Control+Shift+7 move container to $ws17
    bindsym $mod+Control+Shift+8 move container to $ws18
    bindsym $mod+Control+Shift+9 move container to $ws19
    bindsym $mod+Control+Shift+0 move container to $ws20
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    #Shortcuts
    #shortcuts
