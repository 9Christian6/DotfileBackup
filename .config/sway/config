    set $ws14 workspace number 14
    set $ws15 workspace number 15
    set $ws16 workspace number 16
    set $ws17 workspace number 17
    set $ws18 workspace number 18
    set $ws19 workspace number 19

    # Switch to workspace
    bindsym $mod+1 $ws1
    bindsym $mod+2 $ws2
    bindsym $mod+3 $ws3
    bindsym $mod+4 $ws4
    bindsym $mod+5 $ws5
