    bindsym $mod+Shift+y exec --no-startup-id /home/christian/Opt/emojipick/emojipick
    # bindsym $mod+a exec --no-startup-id /home/christian/Bin/Lock
    bindsym $mod+u exec --no-startup-id python3 /home/christian/Bin/removeUrgency.py
    # bindsym $mod+Control+c exec --no-startup-id  firefox --private-window
    # bindsym $mod+y exec --no-startup-id brave-browser -new-window www.youtube.com --use-gl=egl --ozone-platform-hint=auto --enable-features=VaapiVideoDecoder --disable-features=UseChromeOSDirectVideoDecoder
    bindsym $mod+y exec --no-startup-id brave-browser -new-window www.youtube.com 
    # bindsym $mod+t exec --no-startup-id brave-browser -new-window www.twitch.tv/following/live --use-gl=egl --ozone-platform-hint=auto --enable-features=VaapiVideoDecoder --disable-features=UseChromeOSDirectVideoDecoder
    bindsym $mod+t exec --no-startup-id brave-browser -new-window www.twitch.tv/following/live 
    bindsym $mod+Control+r exec --no-startup-id brave-browser -new-window old.reddit.com --use-gl=egl --ozone-platform-hint=auto --enable-features=VaapiVideoDecoder --disable-features=UseChromeOSDirectVideoDecoder
    bindsym $mod+Control+s exec /home/christian/Bin/Shutdown
    bindsym $mod+Control+h workspace prev_on_output
